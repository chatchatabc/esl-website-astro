---
import { Icon } from "astro-icon";
import footerJson from "@data/footer.json";
import { Picture } from "astro-imagetools/components";
---

<div
  id="contact"
  class="bg-esl-c-2 pt-[5rem] pb-[2.5rem] text-white container mx-auto sm:rounded-t-[1.75rem] sm:mt-5 md:mt-10 lg:rounded-t-[3.75rem] lg:w-10/12"
>
  <div class="w-fit mx-auto px-5 lg:px-0">
    <figure class="flex flex-1 space-x-5">
      <svg
        class="fill-white h-[100px] w-[100px]"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        ><path
          d="M9 14q0-3.75 2.625-6.375T18 5v2q-2.925 0-4.963 2.038T11 14H9Zm4 0q0-2.075 1.463-3.538T18 9v2q-1.25 0-2.125.875T15 14h-2ZM5 6q-.825 0-1.413-.588T3 4q0-.825.588-1.413T5 2q.825 0 1.413.588T7 4q0 .825-.588 1.413T5 6Zm-3 5V8.5q0-.625.438-1.063T3.5 7h3q1.125 0 1.938-.713T9.45 4.5h2q-.15 1.5-1.1 2.65T8 8.75V11H2Zm17 6q-.825 0-1.413-.588T17 15q0-.825.588-1.413T19 13q.825 0 1.413.588T21 15q0 .825-.588 1.413T19 17Zm-3 5v-2.25q-1.4-.45-2.35-1.6t-1.1-2.65h2q.2 1.075 1.012 1.787T17.5 18h3q.625 0 1.063.438T22 19.5V22h-6Z"
        ></path></svg
      >
      <figcaption class="flex items-center">
        <p class="text-white text-esl-4 text-center">
          Take the first step in English fluency contact us now!
        </p>
      </figcaption>
    </figure>
  </div>

  <!--section2 - QR code section-->
  <div
    class="w-fit mx-auto flex flex-1 flex-wrap justify-center mt-6 lg:space-x-[3rem]"
  >
    {
      [footerJson.qr[0]].map((qrSet: any) => (
        <div class=" flex flex-col px-[3rem] py-[1rem] lg:px-0 lg:py-0">
          <div class="text-center text-esl-4 bold">微信扫码入群</div>
          <Picture
            alt="WeChat"
            src={`/images/${qrSet.qrCode}`}
            w={240}
            h={240}
            breakpoints={{ count: 1, minWidth: 240 }}
          />
        </div>
      ))
    }
  </div>
  <!--section 3 Company Details -->
  <div
    class="flex flex-col mt-6 text-esl-2 px-5 space-y-8 w-fit mx-auto text-center md:text-left md:w-full md:space-y-0 md:flex-row md:justify-between lg:px-20"
  >
    <div class="companyName text-esl-4">ChatChatABC</div>
    <div class="companyAdress max-w-[250px]">
      Dona P. Ramos St. (Near Fairlane Subd. Road) Brgy. Alfonso Angliongto, Km.
      6, Lanang Davao City
    </div>
    <div class="contactInformation space-y-3">
      <div class="telephone flex items-center justify-center md:justify-normal">
        <span class="text-white inline-block"
          ><svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 16 16"
            ><path
              fill="currentColor"
              fill-rule="evenodd"
              d="M1.885.511a1.745 1.745 0 0 1 2.61.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42a18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511z"
            ></path></svg
          ></span
        >
        <span class="inline-block">+63-999-226-4633</span>
      </div>
      <div class="email flex items-center justify-center md:justify-normal">
        <span class="text-white inline-block"
          ><svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            ><path
              fill="currentColor"
              d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-F.9-2-2-2zm0 4l-8 5l-8-5V6l8 5l8-5v2z"
            ></path></svg
          ></span
        >
        <span class="inline-block"
          ><a href="mailto:chatchatabc@gmail.com">chatchatabc@gmail.com</a
          ></span
        >
      </div>
    </div>
  </div>
</div>
