---
const {currentPage} = Astro.props;

var links1 = [
    ["Home","#"],
    ["About","#"],
    ["Services","#"],
    ["Resources","#"],
    ["Tips","#"],
];

let style1=`inline-block text-white  m-4 border-b-2 border-b-transparent pb-2 text-esl-2`;
let style2= "inline-block  py-2 px-4 mt-2 rounded-full bg-white text-esl-2 text-esl-quarternary hover:bg-esl-quarternary hover:text-white focus-visible:outline-none";

---

<nav class="flex justify-between">
    <div class="fit inline-block">
      
        {links1.map( (linkSet) => 
            <a class={(linkSet[0]===currentPage?"border-b-esl-tertiary ":"hover:border-b-esl-tertiary ")+(linkSet[0]==="Home"?"ml-0 ":"")+style1} href={linkSet[1]}>{linkSet[0]}</a>
        )}
        
    </div>
    <div class="fit inline-block">
        <a class={style2+" mr-2"} href="#">Register</a>
        <a class={style2} href="#">Login</a>
        <a class={style2+" ml-2"} href="#">Contact Us</a>
    </div>
</nav>