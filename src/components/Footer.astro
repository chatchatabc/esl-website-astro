---
import { Icon } from "astro-icon";
import footerJson from "@data/footer.json";
const {config} = Astro.props;
---

<div class="bg-esl-c-2 py-[5rem] text-white rounded-t-[5rem] container mx-auto">
  <!--section1 - Take the first step... -->
  <div class="w-fit mx-auto">
    <figure class="flex flex-1 space-x-5">
      <svg
        class="fill-white h-[100px] w-[100px]"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        ><path
          d="M9 14q0-3.75 2.625-6.375T18 5v2q-2.925 0-4.963 2.038T11 14H9Zm4 0q0-2.075 1.463-3.538T18 9v2q-1.25 0-2.125.875T15 14h-2ZM5 6q-.825 0-1.413-.588T3 4q0-.825.588-1.413T5 2q.825 0 1.413.588T7 4q0 .825-.588 1.413T5 6Zm-3 5V8.5q0-.625.438-1.063T3.5 7h3q1.125 0 1.938-.713T9.45 4.5h2q-.15 1.5-1.1 2.65T8 8.75V11H2Zm17 6q-.825 0-1.413-.588T17 15q0-.825.588-1.413T19 13q.825 0 1.413.588T21 15q0 .825-.588 1.413T19 17Zm-3 5v-2.25q-1.4-.45-2.35-1.6t-1.1-2.65h2q.2 1.075 1.012 1.787T17.5 18h3q.625 0 1.063.438T22 19.5V22h-6Z"
        ></path></svg
      >
      <figcaption class="flex items-center">
        <p class="text-white text-esl-4 text-center">
          Take the first step in English fluency contact us now!
        </p>
      </figcaption>
    </figure>
  </div>

  <!--section2 - QR code section-->
  <div class="w-fit mx-auto flex flex-1 space-x-[3rem] mt-6">
    {
      footerJson.qr.map((qrSet: any) => (
        <div class=" flex flex-col">
          <div class="text-center text-esl-4 bold">{qrSet.url}</div>
          <img class={"h-[10rem] w-[10rem] "+(config.lite?config.placeholder:"")} src={  config.lite? "": `./images/${qrSet.qrCode}`} />
        </div>
      ))
    }
  </div>
  <!--section3 - useful links section -->
  <div class="flex flex-1 mx-auto mt-[6rem] w-8/12 justify-between text-white">
    {
      footerJson.link1.map((link) => (
        <div>
          <div>
            <span class="text-esl-4">{link.parent}</span>
          </div>
          <div class="mt-2 space-y-2">
            {link.children.map((child) => (
              <a class="block text-esl-2" href={child.url}>
                {child.text}
              </a>
            ))}
          </div>
        </div>
      ))
    }
    <div>
      <div>
        <span class="text-esl-4">{footerJson.link2.parent}</span>
      </div>
      <div class="mt-2 space-y-2">
        {
          footerJson.link2.children.map((child) => {
            {
              return child.svg === true ? (
                <div class=" ">
                  <a class="flex flex-1 text-esl-2 space-x-3" href={child.url}>
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                    >
                      <g fill="none">
                        <>
                          <path d="M24 0v24H0V0h24ZM12.593 23.258l-.011.002l-.071.035l-.02.004l-.014-.004l-.071-.035c-.01-.004-.019-.001-.024.005l-.004.01l-.017.428l.005.02l.01.013l.104.074l.015.004l.012-.004l.104-.074l.012-.016l.004-.017l-.017-.427c-.002-.01-.009-.017-.017-.018Zm.265-.113l-.013.002l-.185.093l-.01.01l-.003.011l.018.43l.005.012l.008.007l.201.093c.012.004.023 0 .029-.008l.004-.014l-.034-.614c-.003-.012-.01-.02-.02-.022Zm-.715.002a.023.023 0 0 0-.027.006l-.006.014l-.034.614c0 .012.007.02.017.024l.015-.002l.201-.093l.01-.008l.004-.011l.017-.43l-.003-.012l-.01-.01l-.184-.092Z" />
                          <path
                            fill="white"
                            d="M10 3c4.071 0 7.7 2.67 7.982 6.368c2.304.862 4.018 2.81 4.018 5.26c0 1.867-1.026 3.472-2.52 4.493a2.28 2.28 0 0 0-.022.439l.014.44a1 1 0 0 1-1 1c-.758 0-1.46-.247-2.054-.71a7.84 7.84 0 0 1-1.105.078c-2.767 0-5.322-1.491-6.284-3.751a9.231 9.231 0 0 1-.454-.058c-.716.567-1.54.885-2.464.885a1 1 0 0 1-1-1l.005-.203l.018-.41a2.1 2.1 0 0 0-.058-.608C3.248 14.004 2 12.073 2 9.833C2 5.896 5.76 3 10 3Zm5.313 7.889c-2.768 0-4.688 1.837-4.688 3.74c0 1.902 1.92 3.74 4.688 3.74a5.8 5.8 0 0 0 1.078-.101c.434-.082.819.1 1.15.36c.099-.433.324-.842.706-1.088C19.363 16.82 20 15.753 20 14.629c0-1.903-1.92-3.74-4.688-3.74ZM10 5C6.508 5 4 7.327 4 9.833c0 1.477.837 2.858 2.264 3.777c.531.343.76.957.83 1.559l.482-.342c.308-.208.63-.366 1.05-.288c.056-3.287 3.203-5.65 6.687-5.65c.192 0 .383.007.573.021C15.361 6.784 13.059 5 10 5Zm3.62 8a1 1 0 1 1 0 2a1 1 0 0 1 0-2ZM17 13a1 1 0 1 1 0 2a1 1 0 0 1 0-2ZM8 7a1 1 0 1 1 0 2a1 1 0 0 1 0-2Zm4 0a1 1 0 1 1 0 2a1 1 0 0 1 0-2Z"
                          />
                        </>
                      </g>
                    </svg>
                    <span>{child.text}</span>
                    <Icon
                      class="h-[1.5 rem] w-[1.5rem]"
                      name="ci:external-link"
                    />
                  </a>
                </div>
              ) : (
                <div class="">
                  <a class=" flex flex-1 space-x-3 text-esl-2" href={child.url}>
                    <Icon class="w-[1.5rem] h-[1.5rem]" name={child.val} />
                    {child.text}
                    <Icon
                      class="h-[1.5 rem] w-[1.5rem]"
                      name="ci:external-link"
                    />
                  </a>
                </div>
              );
            }
          })
        }
      </div>
    </div>
  </div>
</div>
