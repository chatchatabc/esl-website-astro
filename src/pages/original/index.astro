---
import MainLayout from "src/layouts/MainLayout.astro";
import landingJson from "@data/landingPage.json";
import { Icon } from "astro-icon";
//section 1
import ImageCard from "../../components/landing-page/ImageCard.astro";
//section 3
import ResourceCard from "../../components/landing-page/ResourceCard.astro";
import TeacherListItem from "../../components/landing-page/TeacherListItem.astro";
import { liteImageConfig } from "../../scripts/liteImageConfig";
import i18next, { t, changeLanguage, setDefaultNamespace } from "i18next";

changeLanguage("en");
---

<MainLayout currentPage="Home" config={liteImageConfig}>
  <div class="">
    <!--Section one-->
    <div
      class="mb-2 container mx-auto rounded-b-[1.75rem] sm:rounded-[1.75rem] overflow-hidden lg:rounded-[3.75rem] lg:mt-10 lg:w-10/12 lg:mx-auto"
    >
      <div
        class="bg-esl-c-2 flex flex-1 justify-between flex-col-reverse lg:rounded-tr-none lg:flex-row"
      >
        <div class="p-10 bg-esl-c-2 lg:w-5/12">
          <div class="text-esl-4">
            <span class="text-esl-c-3">Explore the world <br /> with</span>
            <span
              class="text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-600"
              >English</span
            >
          </div>
          <div class="">
            <div class="mt-6 text-esl-2 text-white">
              Welcome to our expert English language teaching website, where we
              are dedicated to helping you achieve your language learning goals.
              Whether you're looking to improve your English skills for work,
              travel, or personal development, our team of experienced and
              qualified teachers is here to help you every step of the way.
            </div>
          </div>
        </div>
        <!--clipped image -->
        <div
          class={"landing-clipped min-h-[15rem] bg-cover bg-landing " +
            (liteImageConfig.lite
              ? liteImageConfig.placeholder + ""
              : "bg-[url('images/teaching.jpg')]") +
            " lg:w-7/12"}
        >
        </div>
      </div>
      <div class="bg-white py-12 space-y-[4rem]">
        <div class="px-20 space-y-4">
          <div class="w-[2.5rem] h-[5px] rounded-full bg-esl-c-3"></div>
          <div class="space-y-4 text-esl-2">
            <p class="text-esl-4 text-esl-c-2">Welcome to ABC English</p>
            <p>
              Welcome to ABCEnglish, your go-to destination for mastering the
              English language. Our website is dedicated to providing you with
              top-quality language learning resources and expert teaching
              services to help you achieve your English language goals.
            </p>
            <p>
              With personalized lessons and innovative teaching methods, we are
              committed to helping you develop the skills and confidence you
              need to communicate fluently in English. Whether you're a beginner
              or an advanced learner, our courses are tailored to meet your
              individual needs and learning style.
            </p>
            <p>
              Our team of experienced and qualified teachers is passionate about
              helping you succeed in your language learning journey. We believe
              that learning English should be engaging, fun, and effective,
              which is why we use a variety of teaching tools and resources to
              keep you motivated and on track, including multimedia lessons,
              interactive exercises, and real-life conversations.
            </p>
            <p>
              At ABCEnglish, we also understand that everyone has different
              schedules and learning needs, which is why we offer flexible and
              affordable options to fit your schedule and budget. From
              one-on-one tutoring to group classes and online courses, we have
              something for everyone.
            </p>
            <p>
              So, whether you're looking to improve your English skills for
              work, travel, or personal development, we are here to help you
              every step of the way. Join our community of learners and start
              your English language journey today.
            </p>
          </div>
        </div>
        <div class="flex justify-center">
          <div
            class="w-10/12 space-y-10 justify-center lg:flex lg:space-x-3 lg:space-y-0"
          >
            {
              landingJson.section1.map((cardDetails) => (
                <ImageCard params={cardDetails} config={liteImageConfig} />
              ))
            }
          </div>
        </div>
      </div>
    </div>
    <!--Section two -->
    <div
      class="my-12 flex justify-center container mx-auto lg:mt-10 lg:w-10/12"
    >
      <div class="px-12 flex flex-col-reverse w-10/12 lg:flex-row">
        <div class="space-y-10 lg:space-y-0 lg:w-5/12">
          <!--dashed line -->
          <div
            class="hidden w-[2.5rem] h-[5px] rounded-full bg-esl-c-3 lg:block"
          >
          </div>
          <div class="text-white">
            <p class="text-esl-4 text-center lg:text-left">Service</p>
            <p class="mt-4">
              We provide a platform where teachers and students can connect and
              engage in a free market environment. Teachers are able to showcase
              their skills and expertise to a wide audience, while students have
              the opportunity to browse and choose the teacher that best fits
              their needs and preferences. Our platform facilitates a
              transparent and open market for education, where both teachers and
              students have the freedom to participate and benefit from the
              exchange of knowledge and learning experiences.
            </p>
          </div>
          <div class="mt-16">
            <a
              href="#"
              class="mx-auto block w-fit py-2 px-4 rounded-full bg-white text-esl-2 text-esl-c-2 hover:bg-esl-c-2 hover:text-white"
              >See our teachers</a
            >
          </div>
        </div>
        <div class="flex items-center justify-center lg:w-7/12">
          <!--Teacher Image-->
          <!--<img class={(liteImageConfig.lite?liteImageConfig.placeholder:"")+ " w-[15rem] h-[15rem] object-cover md:w-[20rem] md:h-[20rem] lg:h-[25rem] lg:w-[25rem]"} src={liteImageConfig.lite?"":"./images/teacher.jpg"} style="clip-path: url(#clipped)" />-->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="400"
            height="400"
            viewBox="0 0 400 400"
          >
            <defs>
              <clipPath id="image">
                <path
                  transform="translate(121 -37) rotate(30) scale(1.5)"
                  d="M172.871,0a28.906,28.906,0,0,1,25.009,14.412L245.805,97.1a28.906,28.906,0,0,1,0,28.989L197.88,208.784A28.906,28.906,0,0,1,172.871,223.2H76.831a28.906,28.906,0,0,1-25.009-14.412L3.9,126.092A28.906,28.906,0,0,1,3.9,97.1L51.821,14.412A28.906,28.906,0,0,1,76.831,0Z"
                ></path>
              </clipPath>
            </defs>
            <image
              clip-path="url(#image)"
              height="100%"
              width="100%"
              xlink:href={liteImageConfig.lite ? "" : "/images/teacher.jpg"}
              preserveAspectRatio="xMidYMin slice"
            />
          </svg>
        </div>
      </div>
    </div>
    <!--Section three -->
    <div
      class="rounded-[1.75rem] mb-12 overflow-hidden container mx-auto lg:rounded-[3.75rem] lg:mt-10 lg:w-10/12 lg:mx-auto"
    >
      <div class="bg-white">
        <!--first half -->
        <div class="py-12 w-10/12 mx-auto">
          <div class="text-esl-4">
            <span class="text-esl-c-1">Teaching Resources</span>
          </div>
        </div>
        <!--second half -->
        <div class="w-10/12 flex justify-center mx-auto">
          <div class="w-full grid grid-cols-2 gap-12">
            {
              landingJson.resources.map((resource: any) => {
                return (
                  <ResourceCard
                    resourceParameter={resource}
                    config={liteImageConfig}
                  />
                );
              })
            }
          </div>
        </div>
        <div class="text-center py-10">
          <a
            href="#"
            class="text-center text-esl-2 text-esl-c-2 hover:underline"
            >See all teaching resources</a
          >
        </div>
      </div>
      <!--Tips section -->
      <div class="bg-esl-c-3 py-12 px-6">
        <div class="w-10/12 mx-auto">
          <p class="text-esl-4">Tips</p>
          <div
            class="mx-auto mt-5 space-y-5 lg:grid lg:grid-cols-3 lg:gap-12 lg:w-10/12 lg:space-y-0"
          >
            {
              landingJson.tips.map((tip) => {
                return (
                  <div class="bg-white p-12 rounded-tl-[1.5rem] rounded-br-[1.5rem] text-center w-full ">
                    <div class="">{tip}</div>
                  </div>
                );
              })
            }
          </div>
          <a
            href="#"
            class="mx-auto block rounded-full w-fit bg-white py-2 px-4 text-esl-2 text-esl-c-2 mt-5 hover:bg-esl-c-2 hover:text-white"
            >More tips</a
          >
        </div>
      </div>
    </div>
  </div>
  <style>
    .landing-clipped {
      clip-path: none;
    }
    @media (min-width: 1024px) {
      .landing-clipped {
        clip-path: polygon(0 0, 100% 0, 100% 100%, 63% 100%, 8% 56%);
      }
    }
  </style>
</MainLayout>
