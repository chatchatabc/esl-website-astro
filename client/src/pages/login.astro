---
import MainLayout from "@layouts/MainLayout.astro";
---

<MainLayout>
  <section class="max-w-xl mx-auto p-4 lg:p-8">
    <section class="bg-white rounded-xl overflow-hidden p-8">
      <header>
        <h1 class="text-2xl">Sign In</h1>
      </header>

      <section class="mt-4 mx-auto">
        <form data-login-form class="-mx-1">
          <label class="flex flex-col p-1">
            <span class="text-xs font-bold">Username</span>
            <input
              required
              name="username"
              class="border rounded-md p-2"
              placeholder="Username"
            />
          </label>
          <label class="flex flex-col p-1">
            <span class="text-xs font-bold">Password</span>
            <input
              required
              name="password"
              type="password"
              class="border rounded-md p-2"
              placeholder="Password"
            />
            <a
              href="/"
              class="text-xs text-blue-800 ml-auto block w-fit hover:underline"
            >
              Forgot password?
            </a>
          </label>

          <footer class="p-1 mt-2 space-y-2">
            <button
              class="mx-auto text-sm w-full block p-2 rounded-md bg-blue-300 transition hover:bg-blue-400"
            >
              Sign in
            </button>
            <button
              class="mx-auto text-sm w-full block p-2 rounded-md bg-gray-200"
            >
              Sign in with WhatsApp
            </button>

            <section class="pt-2 text-xs flex justify-between">
              <div class="flex flex-wrap w-1/2">
                <p class="mr-1">Not a member?</p>
                <a class="text-blue-800 hover:underline" href="/register">
                  Join now
                </a>
              </div>

              <div class="flex justify-end flex-wrap w-1/2">
                <p class="mr-1">Need help?</p>
                <a class="text-blue-800 hover:underline">Contact us!</a>
              </div>
            </section>
          </footer>
        </form>
      </section>
    </section>
  </section>
</MainLayout>

<script>
  const form = document.querySelector<HTMLFormElement>("[data-login-form]");

  form?.addEventListener("submit", (e) => {
    e.preventDefault();
    const formData = new FormData(form);
    const data = Object.fromEntries(formData.entries());
    console.log(data);
  });
</script>
